@model Beispiel_02.ETL.Person
@{
    ViewBag.Title = "PersonHinzufügen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Person Hinzufügen</h2>
@using (Html.BeginForm("FormularLaden", "Person", FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-4 form-group">
            <div class="col-md-12">
                @Html.LabelFor(p => p.Ausweis, new { })
                @Html.TextBoxFor(p => p.Ausweis, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.Ausweis, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-lg-4 form-group">
            <div class="col-md-12">
                @Html.LabelFor(p => p.Name, new { })
                @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-lg-4 form-group">
            <div class="col-md-12">
                @Html.LabelFor(p => p.Startdatum, new { })
                @Html.EditorFor(p => p.Startdatum, new { htmlAttributes = new { @class = "form-control", type = "date", data_val = "false", @Value = DateTime.Now.ToString("yyyy-MM-dd") } })
            </div>
        </div>
        <div class="col-lg-4 form-group">
            <div class="col-md-12">
                <input type="submit" name="submit" class="btn btn-primary btn-block" value="Hinzufügen" />
                <input type="submit" name="submit" class="btn btn-primary btn-block" value="Bearbeiten" />
                <input type="submit" name="submit" class="btn btn-primary btn-block" value="Löschen" />
            </div>
        </div>
    </div>
}

@section Scripts
{
    @Scripts.Render("Funktionen/Person.js")
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script> <!--Fuer ValidationMessage-->
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script> <!--Auch fuer ValidationMessage-->
}

